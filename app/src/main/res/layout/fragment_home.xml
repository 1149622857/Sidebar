<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8B20E4FD"
    tools:context=".ui.home.HomeFragment">


    <TextView
        android:id="@+id/blank"
        android:layout_width="262dp"
        android:layout_height="138dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/round_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/blank2"
        android:layout_width="350dp"
        android:layout_height="259dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/round_frame"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/Serial"
        android:layout_width="86dp"
        android:layout_height="48dp"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="14dp"
        android:background="@color/white"
        android:entries="@array/data"
        android:spinnerMode="dropdown"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/blank"
        app:layout_constraintStart_toEndOf="@+id/textSerial" />

    <Button
        android:id="@+id/closeSerial"
        android:layout_width="88dp"
        android:layout_height="41dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/round_frame"
        android:backgroundTint="#02B0FF"
        android:text="关闭串口"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/blank"
        app:layout_constraintEnd_toEndOf="@+id/blank" />

    <TextView
        android:id="@+id/textSerial"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="19dp"
        android:gravity="center"
        android:text="串口:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/blank"
        app:layout_constraintStart_toStartOf="@+id/blank" />

    <TextView
        android:id="@+id/textCommunication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="20dp"
        android:text="通迅口"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/blank"
        app:layout_constraintTop_toTopOf="@+id/blank"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textNumbering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="88dp"
        android:text="编号"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textRunning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="400dp"
        android:background="@drawable/round_frame"
        android:text="运行状态"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="温度（°C）:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/blank2"
        app:layout_constraintTop_toTopOf="@+id/blank2" />

    <TextView
        android:id="@+id/textPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="92dp"
        android:text="功率（%）:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/blank2"
        app:layout_constraintTop_toTopOf="@+id/blank2" />

    <TextView
        android:id="@+id/alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="72dp"
        android:text="报警"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/blank2"
        app:layout_constraintStart_toStartOf="@+id/blank2" />

    <TextView
        android:id="@+id/number"
        android:layout_width="47dp"
        android:layout_height="33dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/round_frame"
        android:gravity="center"
        android:text="123"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNumbering" />

    <TextView
        android:id="@+id/showTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="44dp"
        android:text="这里显示温度"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/blank2"
        app:layout_constraintTop_toTopOf="@+id/blank2" />

    <TextView
        android:id="@+id/showPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="44dp"
        android:text="这里显示功率"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/blank2"
        app:layout_constraintTop_toBottomOf="@+id/showTemp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="31dp"
        android:layout_height="30dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/gray_circle"
        app:layout_constraintStart_toEndOf="@+id/textCommunication"
        app:layout_constraintTop_toTopOf="@+id/blank" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="152dp"
        android:layout_marginBottom="68dp"
        android:src="@drawable/green_circle"
        app:layout_constraintBottom_toBottomOf="@+id/blank2"
        app:layout_constraintStart_toEndOf="@+id/alarm" />


</androidx.constraintlayout.widget.ConstraintLayout>


